<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<display-name>Francois CodeStory</display-name>

	<servlet>
		<servlet-name>main</servlet-name>
		<servlet-class>com.droff.MainServlet</servlet-class>
	</servlet>
	<servlet>
        <servlet-name>change</servlet-name>
        <servlet-class>com.droff.scalaskel.Change</servlet-class>
    </servlet>

	<servlet-mapping>
		<servlet-name>main</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	
	<servlet-mapping>
        <servlet-name>main</servlet-name>
        <url-pattern>/scalaskel/change/</url-pattern>
    </servlet-mapping>
</web-app>
